<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Room 205"
                android:textSize="20dp"
                android:layout_marginRight="60dp"
                android:id="@+id/room205"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Room 206"
                android:textSize="20dp"
                android:id="@+id/room206"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Room 207"
                android:textSize="20dp"
                android:layout_marginRight="60dp"
                android:id="@+id/room207"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Room 208"
                android:textSize="20dp"
                android:id="@+id/room208"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Room 209"
                android:textSize="20dp"
                android:layout_marginRight="60dp"
                android:id="@+id/room209"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Go Home"
                android:textSize="20dp"
                android:backgroundTint="@color/teal_700"
                android:id="@+id/goHome"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>